{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Schema for the compiler/linker warnings",
  "description": "[v1] Schema for the compiler/linker warnings generated by the lucxbox/tools/compiler_warnings",
  "type": "array",
  "items": [
    {
      "type": "object",
      "properties": {
        "file_path": {
          "type": "string"
        },
        "row": {
          "type": "integer"
        },
        "column": {
          "anyOf": [
          {"type": "number"},
          {"type": "null"}
        ]
        },
        "message": {
          "type": "string"
        },
        "components": {
          "type": "array",
          "items": [
            {
              "type": "string"
            }
          ]
        },
        "teams": {
          "type": "array",
          "items": [
            {
              "type": "string"
            }
          ]
        },
        "severity": {
          "anyOf": [
            {"type": "string"},
            {"type": "null"}
          ]
        },
        "type_name": {
          "anyOf" :[
            {"type": "string"},
            {"type": "null"}
          ]
        },
        "quantity": {
          "type": "integer"
        },
        "domain": {
          "type": "string"
        }
      },
      "required": [
        "file_path",
        "row",
        "column",
        "message",
        "components",
        "teams",
        "severity",
        "type_name",
        "quantity",
        "domain"
      ]
    }
  ]
}